@model IEnumerable<PP.Models.Master.MasterSubSubBab>

@{
    ViewBag.Title = "Master Sub Sub Bab";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Master Sub Sub Bab</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<br />
<table id="example1" class="table table-bordered table-responsive table-striped">
    <thead>
        <tr>
            <td rowspan="2">No.</td>
            <td rowspan="2">SubSubBab</td>
            <td rowspan="2">No_Instruksi</td>
            <td rowspan="2">Tanggal berlaku</td>
            <td rowspan="2">Tanggal Jatuh Tempo</td>
            <td rowspan="2">Time Line</td>
            <td colspan="2">Progress</td>
            <td colspan="2">Target</td>
            <td rowspan="2">Status Proposal</td>
            <td rowspan="2">Action</td>
        </tr>
        <tr>
            <td>Detail</td>
            <td>%</td>
            <td>Detail</td>
            <td>%</td>
        </tr>
    </thead>
    <tbody>
        @{ Int64 a = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(a++)</td>
                <td>@Html.DisplayFor(modelItem => item.Nama)</td>
                <td>@Html.DisplayFor(modelItem => item.NoInstruksi)</td>
                <td>@Html.DisplayFor(modelItem => item.TanggalBerlaku)</td>
                <td>@Html.DisplayFor(modelItem => item.TanggalJatuhTempo)</td>
                <td>@Html.DisplayFor(modelItem => item.TimeLine)</td>
                <td>1</td>
                <td>1</td>
                <td>1</td>
                <td>1</td>
                <td>@Html.DisplayFor(modelItem => item.StatusProposal)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Edit In Web", "About", "Home", new { id = item.Id }, null) |
                    @Html.ActionLink("Upload", "UploadBukus", new { id = item.Id }) |
                    @Html.ActionLink("Download", "../Dataupload/" + item.Dokuments) |
                </td>
            </tr>
        }
    </tbody>
</table>