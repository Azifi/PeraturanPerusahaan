@{
    ViewBag.Title = "Upload BUKU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <br />
    <a>Upload Buku</a>
    <br />
    <img width="20%" height="20%" src="~/Content/IMG/upload.png" />
    <h3>Masukkan File Disini</h3>
    @using (Html.BeginForm("UploadBuku", "MasterBooks", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Raw(ViewBag.Error)
        <div class="form-group">
            <div class="container">
                <div class="col-md-12">
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input id="Dokuments" name="Dokuments" type="file" class="form-control">
@foreach (var kingkong in ViewBag.Data)
{
                            <input hidden type="text" name="Id" id="Id" value="@kingkong.Id">
}
</div>

</div>

</div>

</div>

</div>

<div class="mb-3">
            <input type="submit" value="Upload" class="btn btn-primary" />
        </div>
    }
</center>